generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Shift {
    id        String    @id @default(auto()) @map("_id") @db.ObjectId
    startedAt DateTime
    endedAt   DateTime?
    breaks    Break[]

    updatedAt DateTime @updatedAt

    @@index([startedAt])
}

type Break {
    startedAt DateTime
    endedAt   DateTime?
}
